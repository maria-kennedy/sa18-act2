<h1>Products Table</h1>

<table>
    <thead>
        <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Category</th>
        </tr>
    </thead>
    <tbody>
        <% @products.each do |product| %>
        <tr>
            <td><%= link_to product.name, product_path(product) %></td>
            <td><%= product.price %></td>
            <td><%= product.description %></td>
        </tr>
        <% end %>
    </tbody>
</table>